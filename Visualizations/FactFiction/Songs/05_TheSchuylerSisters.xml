                </sp>

                <sp who="#peggy">
                    <speaker>PEGGY</speaker>
                    <l>And <persName ref="#peggy">Peggy</persName>!</l>
                </sp>

                <sp who="#company">
                    <speaker>COMPANY</speaker>
